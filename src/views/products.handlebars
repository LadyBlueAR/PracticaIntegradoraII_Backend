<div class="container">
    <h1>Hola {{user.first_name}} {{user.last_name}}</h1>
    <h5>Rol: {{user.rol}}</h5>
    <button id="logout">Cerrar Sesi√≥n</button>
    <h1 style="text-align: center;">Lista De Productos</h1>
    <ul>
        {{#each products}}
            <li style="display: flex; justify-content: space-around;">
                <h2>{{this.title}}</h2>
                <p>ID: {{this._id}}</p>
                <p>{{this.description}}</p>
                <p>Precio: {{this.price}}</p>
                <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
            </li>
        {{/each}}
    </ul>
    <br/>
    <div class="pagination">
{{#if hasPrevPage}}
    <a href="{{prevLink}}"><button>Anterior</button></a>
    {{/if}}

    {{page}}

    {{#if hasNextPage}}
    <a href="{{nextLink}}"><button>Siguiente</button></a>
    {{/if}}
    </div>    
</div>
<script src="./js/login.js"></script>




